
<form class="d-flex justify-content-center mb-4">
    <div class="card create-post mt-3 p-2 border-2 border-primary shadow-lg">
        <h2 class="mb-4">Create Post</h2>
        <div class="form-group mb-2">
            <label for="post-title">Post Title</label>
            <input class="form-control post-title" type="text" name="post-title" id="post-title">
        </div>
        <div class="form-group mb-2">
            <label for="post-text">Post Text</label>
            <textarea class="post-text form-control" type="text" name="post-text" id="post-text"></textarea>
        </div>
        <button class="post-submit btn btn-primary">Post</button>
    </div>
</form>
<ul class="d-flex justify-content-center p-0 row">
    {{#each posts as |post| }}
    <li class="list-unstyled w-100 d-flex justify-content-center">
        {{> postInfo loggedIn="loggedIn"}}
    </li>
    {{/each}}
</ul>
<script src="/javascript/create-post.js"></script>
<script src="/javascript/edit-post.js"></script>