<article class="card my-3 posts mx-0 ">
    <a href="/post/{{id}}">
    <div data-id = {{id}} class="card-header">
        {{#if homepage}}
        <div class="d-flex justify-content-between flex-wrap">
            <div>
                <p class="fs-4 m-0 post-title">{{postTitle}}</p>
            </div>
            <div class="d-flex">
                <i class="bi bi-person-circle"></i>
                <p class=""><span class="comment-user">{{user.userName}}</span> <span class="post-date">on {{format_date createdAt }}</span></p>
            </div>
        </div>
        {{else}}
        <div class="d-flex justify-content-between">
            <div class="d-flex flex-column">
                <p class="fs-4 m-0 post-title">{{postTitle}}</p>
                <div class="d-flex">
                    <i class="bi bi-person-circle"></i>
                    <p class=""><span class="comment-user">{{user.userName}}</span> <span class="post-date">on {{format_date createdAt }}</span></p>
                </div>
            </div>
        {{/if}}
            <div>
                {{#if loggedIn}}
                <button class="btn btn-sm m-1 edit">Edit post</button>
                {{/if}}
            </div>
        </div>
    </div>
    </a>
    <div class="card-body">
        <p>{{postText}}</p>
        {{#if comments}}
        <div class="comment-box">
            {{#each comments as |comment|}}
            <i class="bi bi-person-circle pb-1 d-inline"></i>
            <p class="comment-user d-inline-block m-0">{{comment.user.userName}}</p>
            <span class="comment-date">{{format_date comment.createdAt}}</span>
            <p class="comment-text">{{comment.commentText}}</p>
            {{/each}}
        </div>
        {{/if}}
    </div>
</article>