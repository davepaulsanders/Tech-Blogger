<article class="card my-3 posts mx-0 ">
    <a href="/post/{{id}}">
    <div data-id = {{id}} class="card-header">
        {{#if homepage}}
        <div class="d-flex justify-content-between flex-wrap">
            <div>
                <p class="fs-4 m-0 post-title">{{postTitle}}</p>
            </div>
            <div class="d-flex">
                <p class="post-date"><span><i class="bi bi-person-circle avatar"></i></span><span class="comment-user">{{user.userName}}</span> on {{format_date createdAt }}</p>
            </div>
        </div>
        {{else}}
        <div class="d-flex justify-content-between">
            <div class="d-flex flex-column">
                <p class="fs-4 m-0 post-title">{{postTitle}}</p>
                <div class="d-flex">
                    <p class="post-date"><span><i class="bi bi-person-circle avatar"></i></span><span class="comment-user">{{user.userName}}</span> on {{format_date createdAt }}</p>
                </div>
            </div>
        {{/if}}
            <div>
                {{#if loggedIn}}
                <button class="btn btn-sm m-1 edit">Edit post</button>
                {{/if}}
            </div>
        </div>
    </div>
    </a>
    <div class="card-body">
        <p>{{postText}}</p>
    </div>
</article>