<article class="card my-3 posts shadow-lg border-2 border-primary">
    <a href="api/posts/{{id}}">
    <div data-id = {{id}} class="card-header d-flex justify-content-between">
        <h2>{{postTitle}}</h2>
        <div class="">
        <i class="bi bi-person-circle pb-1 d-inline"></i>
        <p class="d-inline post-date"> {{user.userName}} on {{format_date createdAt }}</p>
        {{#if loggedIn}}
        <div class="d-flex justify-content-end">
        <button class="btn btn-primary btn-sm m-1 edit">Edit post</button>
        </div>
        {{/if}}
        </div>
    </div>
    <div class="card-body">
        <p>{{postText}}</p>

    {{#if comments}}
    <div class="comment-box">
     {{#each comments as |comment|}}
     <i class="bi bi-person-circle pb-1 d-inline"></i>
     <p class="comment-user d-inline">{{comment.user.userName}}</p>
     <p class="comment-text">{{comment.commentText}}</p>
     {{/each}}
    </div>
    {{/if}}
    </div>
    </a>
</article>